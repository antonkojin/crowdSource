<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>
  <body>
    <h1>Create new campaign</h1>
    <form id="new-task-form" action="" method="">
      <h3>New task</h3>
      <div>
        <label for="new-task-title">Title</label>
        <textarea id="new-task-title" name="title" required></textarea>
      </div>
      <div>
        <label for="new-task-context">Context</label>
        <textarea id="new-task-context" name="context" required></textarea>
      </div>
      <div>
        <label for="new-task-choices">Choices</label>
        <textarea id="new-task-choices" name="choices" type="text" required></textarea>
      </div>
      <div>
        <label for="new-task-keywords">Keywords</label>
        <textarea id="new-task-keywords" name="keywords" type="text" required></textarea>
      </div>
      <div>
        <button id="add-task-button" type="submit">Add task</button>
      </div>
    </form>
    <form id="campaign-form" method="" action="">
      <div>
        <label for="campaign-name">Campaign name</label>
        <input id="campaign-name" type="text" name="campaign-name" required>
      </div>
      <div>
        <label for="campaign-workers-per-task">Workers/task</label>
        <input id="campaign-workers-per-task" name="workers-per-task" type="number" value="1" required>
      </div>
      <div>
        <label for="campaign-majority-threshold">Majority threshold</label>
        <input id="campaign-majority-threshold" type="number" value="1" required>
      </div>
      <div>
        <label for="campaign-apply-end">Apply end</label>
        <input id="campaign-apply-end" type="datetime-local" required>
      </div>
      <div>
        <label for="campaign-start">Start</label>
        <input id="campaign-start" type="datetime-local" required>
      </div>
      <div>
        <label for="campaign-end">End</label>
        <input id="campaign-end" type="datetime-local" required>
      </div>
      <h3>Tasks</h3>
      <ul id="tasks-list">
      </ul>
      <button id="create-campaign-button" type="submit">Create</button>
    </form>
    <script src="/js/createCampaign.js"></script>
  </body>
</html>