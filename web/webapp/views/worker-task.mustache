<!DOCTYPE html>
<html lang="en">
  {{> head}}
  <body>
    {{> header}}
    <div class="container" id="body">
      <form action="/worker/campaign/{{task.campaignId}}/task/{{task.id}}/choice" method="POST">
        <div class="row">
          <div class="columns twelve">
            <h1 id="task-title" name="title">{{task.name}}</h1>
          </div>
        </div>
        <div class="row">
          <div class="columns twelve">
            <h2 id="task-context" name="context">{{task.context}}</h2>
          </div>
        </div>
        <div class="row" id="task-choices">
          <div class="columns twelve">
            {{#task.choices}}
            <label>
              <input type="radio" id="{{htmlRadioId}}" name="choice" value="{{value}}" required>
              <span class="label-body"> {{name}} </span>
            </label>
            {{/task.choices}}
          </div>
        </div>
        <div class="row">
          <div class="columns twelve">
            <button class="button-primary" type="submit">Submit</button>
            <a class="button" href="/worker/campaigns">Back</a>
          </div>
        </div>
      </form>
    </div>
    {{> footer}}
  </body>
</html>