<!DOCTYPE html>
<html lang="en">
  {{> head}}
  <body>
    {{> header}}
    <div class="container">
      
      <h1>Create new campaign</h1>
      
      <form id="campaign-form" method="" action="">
        <div class="row">
          <div class="columns twelve">
            <h3>Tasks</h3>
            <table class="u-full-width" id="tasks-list">
              <thead>
                <tr>
                  <th>Title</th>
                  <th></th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
        </div>
        <div class="row">
          <div class="column twelve">
            <button class="u-pull-right button-primary" id="new-task-button" type="button">Add task</button>
          </div>
        </div>
        <div class="row">
          <div class="columns six">
            <label for="campaign-name">Campaign name</label>
            <input class="u-full-width" id="campaign-name" type="text" name="campaign-name" required>
          </div>
          <div class="columns three">
            <label for="campaign-workers-per-task">Workers/task</label>
            <input class="u-full-width" id="campaign-workers-per-task" name="workers-per-task" type="number" value="1" required>
          </div>
          <div class="columns three">
            <label for="campaign-majority-threshold">Majority threshold</label>
            <input class="u-full-width" id="campaign-majority-threshold" type="number" value="1" required>
          </div>
        </div>
        <div class="row">
          <div class="column one-third">
            <label for="campaign-start">Start</label>
            <input id="campaign-start" type="datetime-local" required>
          </div>
          <div class="column one-third">
            <label for="campaign-end">End</label>
            <input id="campaign-end" type="datetime-local" required>
          </div>
          <div class="column one-third">
            <label for="campaign-apply-end">Apply end</label>
            <input id="campaign-apply-end" type="datetime-local" required>
          </div>
        </div>
        <button class="button-primary" id="create-campaign-button" type="submit">Create</button>
        <button type="button" onclick="window.location='campaigns'">Back</button>
      </form>
      
    </div>
    {{> new-task}}
    {{> footer}}
    <script src="/js/create-campaign.js"></script>
    <link rel="stylesheet" href="/css/awesomplete.css" />
    <script src="/js/awesomplete.js"></script>
  </body>
</html>