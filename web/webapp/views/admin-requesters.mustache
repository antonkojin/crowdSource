<!DOCTYPE html>
<html lang="en">
  {{> head}}
  <body>
    {{> header}}
    <div class="container" id="body">
      <form action="/admin/new-password" method="POST">
        <input class="" id="password" type="password" placeholder="Password" name="password" required>
        <button class="" type="submit">Change password</button>
      </form>
      <h1>Requesters verification</h1>
      <ul>
        {{#requesters}}
          <li>
            <button onclick="fetch('/admin/verify/{{id}}', {method: 'post', credentials: 'include'}).then(location.reload())">Verify</button>
            {{email}}
          </li>
        {{/requesters}}
      </ul>
      <a class="button" href="logout">Logout</a>
    </div>
    {{> footer}}
  </body>
</html>