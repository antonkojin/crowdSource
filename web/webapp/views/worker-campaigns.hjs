<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  </head>
  <body>
    <div id="my-campaigns">
      <h4>Ongoing Campaigns</h4>
      <ul>
      {{#campaigns.applied}}
        <li><a href="/worker/campaign/{{id}}/task">{{name}}</a></li>
      {{/campaigns.applied}}
      </ul>
    </div>
    <div id="appliable-campaigns">
      <h4>Apply to Campaign</h4>
      <ul>
        {{#campaigns.appliable}}
        {{!-- with javascript append handler to send POST request to apply to campaign --}}
        <li>
          <button data-campaign-id={{id}}> {{name}} </button>
        </li>
        {{/campaigns.appliable}}
      </ul>
    </div>
    <script src="/js/worker-campaigns.js"></script>
  </body>
</html>